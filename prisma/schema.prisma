generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model courses {
  id           Int           @id @default(autoincrement())
  title        String        @db.VarChar(255)
  description  String?       @db.Text
  category     String?       @db.VarChar(100)
  price        Decimal?      @default(0.00) @db.Decimal(10, 2)
  instructorId Int
  thumbnail    String?       @db.VarChar(255)
  createdAt    DateTime?     @default(now()) @db.Timestamp(0)
  updatedAt    DateTime?     @default(now()) @db.Timestamp(0)
  user         user          @relation(fields: [instructorId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "courses_ibfk_1")
  enrollments  enrollments[]
  review       review[]

  @@index([instructorId], map: "instructorId")
}

model enrollments {
  id        Int       @id @default(autoincrement())
  studentId Int
  courseId  Int
  createdAt DateTime? @default(now()) @db.Timestamp(0)
  user      user      @relation(fields: [studentId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "enrollments_ibfk_1")
  courses   courses   @relation(fields: [courseId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "enrollments_ibfk_2")

  @@index([courseId], map: "courseId")
  @@index([studentId], map: "studentId")
}

model user {
  id           Int           @id @default(autoincrement())
  name         String        @db.VarChar(100)
  email        String        @unique(map: "email") @db.VarChar(150)
  profileImage String?
  password     String        @db.VarChar(255)
  role         user_role?    @default(Student)
  created_at   DateTime?     @default(now()) @db.Timestamp(0)
  courses      courses[]
  enrollments  enrollments[]
  review       review[]
}

model review {
  id        Int      @id @default(autoincrement())
  rating    Float
  comment   String?
  courseId  Int
  studentId Int
  createdAt DateTime @default(now())
  updatedAt DateTime
  courses   courses  @relation(fields: [courseId], references: [id], map: "Review_courseId_fkey")
  user      user     @relation(fields: [studentId], references: [id], map: "Review_studentId_fkey")

  @@index([courseId], map: "Review_courseId_fkey")
  @@index([studentId], map: "Review_studentId_fkey")
}

enum user_role {
  Admin
  Instructor
  Student
}
